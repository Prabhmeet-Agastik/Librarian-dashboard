@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-5 shadow mb-5" style="width: 400px; border-radius: 15px;">
        <h2 class="text-center mb-4 fw-bold">Login</h2>
        <form method="POST" asp-action="Login" asp-controller="Account">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="Username" class="form-control rounded-3" id="email" placeholder="your@email.com" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="Password" class="form-control rounded-3" id="password" placeholder="********" required>
            </div>
            
            <div class="d-flex gap-3">
                @* <button type="button" onclick="window.location.href='@Url.Action("Dashboard", "Dashboard")'"  class="btn btn-warning rounded-pill fw-bold">Login</button> *@
                <button type="submit" class="btn btn-warning rounded-pill fw-bold">Login</button>

                <button type="button" onclick="window.location.href='@Url.Action("Register", "Account")'" class="btn btn-warning rounded-pill fw-bold">Register</button>
            </div>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>
</div>

